<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:SteganographyJr.ViewModels"
             x:Class="SteganographyJr.Views.SteganographyJr">
    <ContentPage.BindingContext>
        <ViewModels:SteganographyJr />
    </ContentPage.BindingContext>
    <ContentPage.Content>

      <TableView Intent="Form" Margin="10,10,10,10">
         <TableRoot>
            <TableSection Title="Image">
               <ViewCell>

                        <Grid RowSpacing="5" ColumnSpacing="5" HeightRequest="200">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button 
                                Text="Change Image"
                                Grid.Row="0"
                                Grid.Column="0"
                                Command="{Binding ChangeCarrierImageCommand}" />
                            <Image 
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.RowSpan="2"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                Source="{Binding CarrierImageSource}"/>
                            
                        </Grid>

                    </ViewCell>
            </TableSection>
                <TableSection Title="Mode">
                    <ViewCell>
                        <Picker ItemsSource="{Binding Modes}"
                                ItemDisplayBinding="{Binding Value}"
                                SelectedItem="{Binding SelectedMode}"/>
                    </ViewCell>
                </TableSection>

                <TableSection Title="Password">
                    <ViewCell>

                        <Grid RowSpacing="5" ColumnSpacing="5">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Switch 
                                IsToggled="{Binding UsePassword}" 
                                Grid.Row="0" Grid.Column="0"/>
                            <Entry
                                IsEnabled="{Binding UsePassword}"
                                Text="{Binding Password}"
                                Grid.Row="0" Grid.Column="1"/>
                        </Grid>

                    </ViewCell>
                </TableSection>

                <TableSection Title="Message">
                    <ViewCell>
                        <StackLayout>
                            <Picker ItemsSource="{Binding Messages}"
                                    ItemDisplayBinding="{Binding Value}"
                                    SelectedItem="{Binding SelectedMessage}" />
                            <Editor 
                                HeightRequest="100"
                                Text="Write your message here."
                                IsVisible="{Binding UsingTextMessage}"/>

                            <Grid IsVisible="{Binding UsingFileMessage}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button 
                                    Text="Select File"
                                    Grid.Row="0" Grid.Column="0"
                                    Command="{Binding ChangeMessageFileCommand}"/>
                                <Label
                                    Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding FileMessage.Path}"/>
                            </Grid>
                            
                        </StackLayout>
                    </ViewCell>
                </TableSection>



                <TableSection>
                    <ViewCell>
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button 
                                Text="Execute"
                                Grid.Row="0" Grid.Column="0"
                                Command="{Binding ExecuteCommand}"/>
                            <ProgressBar 
                                Grid.Row="0" Grid.Column="1"
                                Progress="{Binding ExecutionProgress}"/>
                            
                        </Grid>
                    </ViewCell>
                </TableSection>

            </TableRoot>
      </TableView>

   </ContentPage.Content>
</ContentPage>